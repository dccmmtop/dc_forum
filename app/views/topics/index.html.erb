<section class="content-wrap">
  <div class="container">
  <% @topics.each do |topic|%>
    <div class="row">

      <main class="col-md-12 main-content">

        <article id="108" class="post">

          <div class="post-head">
            <h1 class="post-title"><%=link_to topic.title, topic %></h1>
            <div class="post-meta">
              <span class="author">作者：<%= link_to topic.user.name,'#'%></span> •
              <time class="post-date" datetime="<%= topic.created_at.strftime('%Y年%m月%d日')%>" title="<%= topic.created_at.strftime('%Y年%m月%d日')%>"><%= topic.created_at.strftime('%Y年%m月%d日')%></time>
            </div>
          </div>
          <div class="post-content">
            <p><%= truncate(markdown(topic.body),length:300)%></p>
          </div>
          <!-- <div class="post-permalink">
            <a href="#" class="btn btn-default">阅读全文</a>
          </div> -->

          <footer class="post-footer clearfix">
            <div class="pull-left tag-list">
              <i class="fa fa-folder-open-o"></i>

            </div>
            <div class="pull-right share">
            </div>
          </footer>
        </article>

       <!--  <nav class="pagination" role="navigation">
          <span class="page-number">第 1 页 ⁄ 共 9 页</span>
          <a class="older-posts" href="#"><i class="fa fa-angle-right"></i></a>
        </nav> -->


      </main>
    
    </div>
    <% end %>
  </div>
</section>