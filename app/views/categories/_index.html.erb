 <div class="message"></div>
<div class="panel panel-default ">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>文章数目</th> 
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <%  categories = Category.order(topics_count: :desc).order(created_at: :desc) %>
    <% categories.each do |category| %>
    <tr class="item">
      <td><%= category.name%></td>
      <td><%=category.topics_count%></td>
      <td><%= category.created_at.strftime('%y-%m-%d %H:%M:%S')%></td>
      <td onclick="var re= confirm('是否删除！');$(this).parent().hide()
      <re></re>"><%= link_to "删除" ,{controller: 'categories',action:'destroy',id:category.id}, method: :delete%> 
      </td>
    </tr>
    <% end %>
  </table>
  <%= render "/categories/new"%>
</div>