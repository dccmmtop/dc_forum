<div class="row">
  <%= render "/admins/left"%>
  <div class="col-md-10">
   <div class="message"></div>
   <div class="panel panel-default ">
    <table class="table table-hover">
      <thead>
        <tr class="th-color">
          <th>名称</th>
          <th>文章数目</th> 
          <th>创建时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <% @categories.each do |category| %>
      <tr class="item">
        <td><%= category.name%></td>
        <td><%=category.topics_count%></td>
        <td><%= category.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
        <td ><%= link_to "删除" ,{controller: 'categories',action:'destroy',id:category.id}, method: :delete,data: { confirm: '确定删除吗?' } %> / 
        <%= link_to "编辑",edit_category_path(category.id)%>
        </td>
      </tr>
      <% end %>
    </table>
    <%= render "/categories/new"%>
  </div>
</div>
</div>
<nav class="pagination" role="navigation">
  <span class="page-number"> <%= paginate @categories%></span>
</nav> 

