<div class="panel panel-default reply">
  <div class="panel-heading">
    回复
  </div>
  <div class="panel-body">
    <div class="panel-body">
      <% @comment = Comment.new(user_id: current_user.id,topic_id:topic.id) %>
      <%= simple_form_for @comment,:remote => true do |f|%>
        <%= f.text_area :content,rows:5,class:'form-control'%>
        <%= f.input :user_id,value: current_user.id,as:'hidden'%>
        <%= f.input :topic_id,value: topic.id,as:'hidden'%>
        <div class="hint">支持markdown语法</div>
        <br>
        <%= f.submit "回复",class:' btn btn-primary col-md-1'%>
      <% end%>
    </div>
  </div>
</div>
