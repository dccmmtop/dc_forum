<div class="row">
  <%= render "/admins/left"%>
  <div class="col-md-10">
    <div class="panel panel-default ">
      <table class="table table-hover">
        <thead>
          <tr class="th-color">
            <th>用户名</th>
            <th>邮箱</th>
            <th> 创建时间</th> 
            <th>操作</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr class="item" >
          <td><%= user.name%></td>
          <td> <%= user.email%></td>
          <td><%= user.created_at.strftime('%Y-%m-%d %H:%M:%S')%></td>
          <td ><%= link_to "删除" ,{controller: 'users',action:'destroy',id:user.id}, method: :delete,data: { confirm: '确定删除该用户?' }%>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
