<div class="panel panel-default">
  <div class="panel-heading">
    重置密码
  </div>
  <div class="panel-body">
    <%= simple_form_for(@user,url:'/users/update_password_from_forget',method:'post') do |f|%>
      <input type="text" name="up_url" value="<%= request.url %>" id="up_url" class="hidden">
      <%= f.input :id,value:@user.id,as:"hidden" %>
      <%= f.input :password,label:'新密码' %>
    <%= f.input :password_confirmation,label: '确认密码'%>
    <%= f.submit "保存" ,class:'btn btn-primary col-md-2'%>
  <% end %>
  </div>
</div>
